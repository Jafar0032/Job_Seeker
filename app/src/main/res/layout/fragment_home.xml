<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:paddingVertical="16dp"
    android:paddingHorizontal="24dp"
    android:background="@color/background">

    <TextView
        android:id="@+id/tv_halo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Halo,"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserratmedium"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/tv_username_halo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nicolas !"
        android:textSize="18sp"
        android:textColor="@color/orange_inti"
        android:fontFamily="@font/montserratbold"
        android:layout_marginTop="12dp"
        android:layout_marginStart="8sp"
        android:layout_toRightOf="@id/tv_halo"/>

    <ImageView
        android:id="@+id/iv_profil"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/profile"
        android:layout_alignParentEnd="true"/>

    <include
        android:id="@+id/llBanner"
        layout="@layout/layout_banner"/>

    <TextView
        android:id="@+id/tv_kategori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llBanner"
        android:text="Kategori"
        android:textColor="@color/orange_inti"
        android:fontFamily="@font/montserratbold"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>

    <RelativeLayout
        android:id="@+id/rl_komputer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_kategori"
        android:layout_marginTop="14dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_kategori_komputer"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="2dp"
            android:background="@drawable/box_background"
            android:drawableEnd="@drawable/chipss"
            android:paddingEnd="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_kategori_komputer"
            android:text="Komputer"
            android:textSize="8sp"
            android:textColor="#464646"
            android:fontFamily="@font/montserratmedium"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:gravity="center"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_serah1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/rl_komputer"
        android:layout_below="@id/tv_kategori"
        android:layout_marginTop="14dp"
        android:layout_marginStart="28dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_kategori_serah1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="2dp"
            android:background="@drawable/box_background"
            android:drawableEnd="@drawable/chipss"
            android:paddingEnd="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_kategori_serah1"
            android:text="Komputer"
            android:textSize="8sp"
            android:textColor="#464646"
            android:fontFamily="@font/montserratmedium"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:gravity="center"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_serah2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_komputer"
        android:layout_marginTop="14dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_kategori_serah2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="2dp"
            android:background="@drawable/box_background"
            android:drawableEnd="@drawable/chipss"
            android:paddingEnd="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_kategori_serah2"
            android:text="Komputer"
            android:textSize="8sp"
            android:textColor="#464646"
            android:fontFamily="@font/montserratmedium"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:gravity="center"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_rekomendasi_pekerjaan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_serah2"
        android:text="Rekomendasi Pekerjaan"
        android:textColor="@color/orange_inti"
        android:fontFamily="@font/montserratbold"
        android:textSize="18sp"
        android:layout_marginTop="24dp"/>

</RelativeLayout>