<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:paddingVertical="16dp"
    android:paddingHorizontal="24dp"
    android:background="@color/background">

    <TextView
        android:id="@+id/tv_halo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Halo,"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserratmedium"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/tv_username_halo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Nicolas !"
        android:textSize="18sp"
        android:textColor="@color/orange_inti"
        android:fontFamily="@font/montserratbold"
        android:layout_marginTop="12dp"
        android:layout_marginStart="8sp"
        android:layout_toRightOf="@id/tv_halo"/>

    <ImageView
        android:id="@+id/iv_profil"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/profile"
        android:layout_alignParentEnd="true"/>

    <include
        android:id="@+id/llBanner"
        layout="@layout/layout_banner"/>

    <TextView
        android:id="@+id/tv_kategori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llBanner"
        android:text="Kategori"
        android:textColor="@color/orange_inti"
        android:fontFamily="@font/montserratbold"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>

    <RelativeLayout
        android:id="@+id/rl_komputer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_kategori"
        android:layout_marginTop="14dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_kategori_komputer"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/box_background"
            android:drawableEnd="@drawable/chipss"
            android:paddingEnd="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_kategori_komputer"
            android:text="Komputer"
            android:textSize="8sp"
            android:textColor="#464646"
            android:fontFamily="@font/montserratmedium"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:gravity="center"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_marketing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/rl_komputer"
        android:layout_below="@id/tv_kategori"
        android:layout_marginTop="14dp"
        android:layout_marginStart="35dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_kategori_marketing"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/box_background"
            android:drawableEnd="@drawable/chipss"
            android:paddingEnd="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_kategori_marketing"
            android:text="Marketing"
            android:textSize="8sp"
            android:textColor="#464646"
            android:fontFamily="@font/montserratmedium"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:gravity="center"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_akuntansi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_komputer"
        android:layout_marginTop="14dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_kategori_akuntansi"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/box_background"
            android:drawableEnd="@drawable/chipss"
            android:paddingEnd="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_kategori_akuntansi"
            android:text="Akuntansi"
            android:textSize="8sp"
            android:textColor="#464646"
            android:fontFamily="@font/montserratmedium"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:gravity="center"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_design"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_komputer"
        android:layout_toEndOf="@id/rl_akuntansi"
        android:layout_marginTop="14dp"
        android:layout_marginStart="35dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_kategori_design"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/box_background"
            android:drawableEnd="@drawable/chipss"
            android:paddingEnd="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_kategori_design"
            android:text="Design"
            android:textSize="8sp"
            android:textColor="#464646"
            android:layout_centerInParent="true"
            android:fontFamily="@font/montserratmedium"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:gravity="center"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_arsitektur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/rl_marketing"
        android:layout_below="@id/tv_kategori"
        android:layout_marginTop="14dp"
        android:layout_marginStart="35dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_kategori_arsitektur"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/box_background"
            android:drawableEnd="@drawable/chipss"
            android:paddingEnd="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_kategori_arsitektur"
            android:text="Arsitektur"
            android:textSize="8sp"
            android:textColor="#464646"
            android:fontFamily="@font/montserratmedium"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:gravity="center"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_pariwisata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/rl_design"
        android:layout_below="@id/rl_arsitektur"
        android:layout_marginTop="14dp"
        android:layout_marginStart="35dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_kategori_pariwisata"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/box_background"
            android:drawableEnd="@drawable/chipss"
            android:paddingEnd="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_kategori_pariwisata"
            android:text="Pariwisata"
            android:layout_centerInParent="true"
            android:textSize="8sp"
            android:textColor="#464646"
            android:fontFamily="@font/montserratmedium"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:gravity="center"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_hukum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/rl_arsitektur"
        android:layout_below="@id/tv_kategori"
        android:layout_marginTop="14dp"
        android:layout_marginStart="35dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_kategori_hukum"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/box_background"
            android:drawableEnd="@drawable/chipss"
            android:paddingEnd="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_kategori_hukum"
            android:text="Hukum"
            android:layout_centerInParent="true"
            android:textSize="8sp"
            android:textColor="#464646"
            android:fontFamily="@font/montserratmedium"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:gravity="center"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_engineering"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/rl_pariwisata"
        android:layout_below="@id/rl_hukum"
        android:layout_marginTop="14dp"
        android:layout_marginStart="35dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_kategori_engineering"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/box_background"
            android:drawableEnd="@drawable/chipss"
            android:paddingEnd="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_kategori_engineering"
            android:text="Engineering"
            android:layout_centerInParent="true"
            android:textSize="8sp"
            android:textColor="#464646"
            android:fontFamily="@font/montserratmedium"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:gravity="center"/>

    </RelativeLayout>


        <TextView
            android:id="@+id/tv_rekomendasi_pekerjaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_akuntansi"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/montserratbold"
            android:text="Rekomendasi Pekerjaan"
            android:textColor="@color/orange_inti"
            android:textSize="18sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_rekomendasi_pekerjaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_rekomendasi_pekerjaan"
            android:layout_marginTop="12dp"
            tools:itemCount="1"
            tools:listitem="@layout/item_kerja" />

    </RelativeLayout>