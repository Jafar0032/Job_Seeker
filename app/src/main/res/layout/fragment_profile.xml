<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    tools:context=".ui.profile.ProfileFragment"
    android:background="#FBFBFB">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_profil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:elevation="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/iv_profil"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/img_placeholder"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/cv_profil"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"
        tools:text="Nicolas Rafael Ja'far"
        android:fontFamily="@font/montserratbold"
        android:textColor="#1E1E1E"/>

    <TextView
        android:id="@+id/tv_nganggur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_fullname"
        android:layout_toEndOf="@id/cv_profil"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="Pengengguran"
        android:fontFamily="@font/montserratsemibold"
        android:textColor="#7D7D7D"
        android:textSize="12sp"/>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F4F4F4"
        android:layout_below="@id/cv_profil"
        android:layout_marginTop="28dp"/>

    <LinearLayout
        android:id="@+id/ll_personal_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/line"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginVertical="2dp"
            android:background="@drawable/bg_item_profile"
            android:drawableEnd="@drawable/ic_baseline_person_24"
            android:paddingEnd="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Data"
            android:fontFamily="@font/montserratsemibold"
            android:textColor="#464646"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_right_24"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="128dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ll_personal_data"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginVertical="2dp"
            android:background="@drawable/bg_item_profile"
            android:drawableEnd="@drawable/ic_baseline_book_24"
            android:paddingEnd="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CV"
            android:fontFamily="@font/montserratsemibold"
            android:textColor="#464646"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_right_24"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="210dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ll_cv"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginVertical="2dp"
            android:background="@drawable/bg_item_profile"
            android:drawableEnd="@drawable/ic_baseline_settings_24"
            android:paddingEnd="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:fontFamily="@font/montserratsemibold"
            android:textColor="#464646"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_right_24"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="170dp"/>

    </LinearLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F4F4F4"
        android:layout_below="@id/ll_settings"
        android:layout_marginTop="28dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/line1"
        android:layout_marginTop="28dp"
        android:layout_marginStart="16dp">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="12dp"
            android:layout_marginVertical="2dp"
            android:src="@drawable/ic_logout_24"
            app:tint="#F36E5D"
            android:paddingEnd="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:fontFamily="@font/montserratbold"
            android:textSize="16dp"
            android:textColor="#F36E5D"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_right_24"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="165dp"/>

    </LinearLayout>


</RelativeLayout>